// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String    @id @default(cuid())
  email                  String    @unique
  passwordHash           String?
  appleId                String?   @unique
  googleId               String?   @unique
  githubId               String?   @unique
  name                   String?
  emailVerified          DateTime?
  verificationToken      String?
  verificationTokenExpiry DateTime?
  resetToken             String?
  resetTokenExpiry       DateTime?
  
  // Neue Felder
  company     String?
  role        String?
  onboarded   Boolean @default(false)

  // Relations
  checks      ComplianceCheck[]
  tasks       Task[]
  documents   Document[]
  flightTrackers FlightTracker[]

  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
}

model ComplianceCheck {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Check Details
  status            CheckStatus @default(IN_PROGRESS)
  riskLevel         RiskLevel?
  completedAt       DateTime?
  
  // Scores
  overallScore      Int? // 0-100
  documentationScore Int?
  technicalScore    Int?
  governanceScore   Int?
  
  // Data
  answers           Json // Fragebogen-Antworten
  recommendations   Json? // AI-generierte Empfehlungen
  
  // Metadata
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  tasks             Task[]
  documents         Document[]
  
  @@index([userId])
  @@index([status])
}

enum CheckStatus {
  IN_PROGRESS
  COMPLETED
  ARCHIVED
}

enum RiskLevel {
  MINIMAL
  LIMITED
  HIGH
  UNACCEPTABLE
}

model Task {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  description String?
  status      TaskStatus @default(OPEN)
  priority    Priority @default(MEDIUM)
  dueDate     DateTime?
  
  // Verkn√ºpfung zu Check
  checkId     String?
  check       ComplianceCheck? @relation(fields: [checkId], references: [id], onDelete: SetNull)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  COMPLETED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Document {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  type        DocumentType
  content     String? // Markdown oder JSON
  fileUrl     String? // Falls Upload
  version     Int @default(1)
  
  checkId     String?
  check       ComplianceCheck? @relation(fields: [checkId], references: [id], onDelete: SetNull)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([type])
}

enum DocumentType {
  AI_SYSTEM_CARD
  RISK_ASSESSMENT
  DATA_GOVERNANCE
  TECHNICAL_DOCS
  COMPLIANCE_REPORT
  OTHER
}

// ===========================================
// FLUGTRACKER MODELS
// ===========================================

model Airport {
  iataCode    String   @id @db.VarChar(3)
  name        String
  city        String
  country     String
  latitude    Decimal  @db.Decimal(10, 7)
  longitude   Decimal  @db.Decimal(10, 7)
  timezone    String?
  
  @@index([city])
  @@index([country])
  @@map("airports")
}

model FlightTracker {
  id                       String   @id @default(cuid())
  userId                   String
  user                     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name                     String
  departureAirports        String[] // IATA Codes z.B. ["DUS", "FMO"]
  departureRadiusKm        Int      @default(200)
  destinationAirports      String[] // IATA Codes z.B. ["PVG", "SHA"]
  
  dateRangeStart           DateTime @db.Date
  dateRangeEnd             DateTime @db.Date
  tripDurationDays         Int
  flexibility              FlexibilityType @default(EXACT)
  
  travelClass              TravelClass @default(ECONOMY)
  luggageOption            LuggageOption @default(BOTH)
  
  reportFrequency          ReportFrequency @default(WEEKLY)
  priceAlertThresholdPercent Int?
  priceAlertThresholdEuro    Int?
  
  status                   TrackerStatus @default(ACTIVE)
  
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
  lastCheckedAt            DateTime?
  
  // Relations
  flightResults            FlightResult[]
  reports                  FlightReport[]
  
  @@index([userId])
  @@index([status])
  @@index([dateRangeEnd])
  @@map("flight_trackers")
}

enum FlexibilityType {
  EXACT
  PLUS_MINUS_1
  PLUS_MINUS_2
}

enum TravelClass {
  ECONOMY
  PREMIUM_ECONOMY
  BUSINESS
  FIRST
}

enum LuggageOption {
  INCLUDED
  HAND_ONLY
  BOTH
}

enum ReportFrequency {
  DAILY
  WEEKLY
  MONTHLY
}

enum TrackerStatus {
  ACTIVE
  PAUSED
  ERROR
  EXPIRED
}

model FlightResult {
  id                  String   @id @default(cuid())
  trackerId           String
  tracker             FlightTracker @relation(fields: [trackerId], references: [id], onDelete: Cascade)
  
  checkedAt           DateTime @default(now())
  departureAirport    String   @db.VarChar(3)
  destinationAirport  String   @db.VarChar(3)
  outboundDate        DateTime @db.Date
  returnDate          DateTime @db.Date
  priceEuro           Decimal  @db.Decimal(10, 2)
  airline             String
  stops               Int      @default(0)
  totalDurationMinutes Int
  luggageIncluded     Boolean  @default(false)
  bookingLink         String?
  source              String   // z.B. "kiwi", "skyscanner"
  
  // Raw data for deduplication
  flightHash          String?  // Hash of flight details for dedup
  
  createdAt           DateTime @default(now())
  
  @@index([trackerId])
  @@index([checkedAt])
  @@index([priceEuro])
  @@index([flightHash])
  @@map("flight_results")
}

model FlightReport {
  id          String   @id @default(cuid())
  trackerId   String
  tracker     FlightTracker @relation(fields: [trackerId], references: [id], onDelete: Cascade)
  
  sentAt      DateTime @default(now())
  reportType  FlightReportType
  contentJson Json
  
  @@index([trackerId])
  @@index([sentAt])
  @@map("flight_reports")
}

enum FlightReportType {
  SCHEDULED
  PRICE_ALERT
}
